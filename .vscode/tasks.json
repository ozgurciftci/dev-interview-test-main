{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Files",
            "type": "shell",
            "command": "yarn watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "isBackground": true,
            "promptOnClose": true,
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}
